<?xml version="1.0" encoding="UTF-8"?>

<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">

  <!-- ==================== VEHICLE TYPES ==================== -->
  
  <!-- Regular passenger vehicles -->
  <vType id="DEFAULT_VEHTYPE" vClass="private" accel="2.6" decel="4.5" maxSpeed="13.89" />
  
  <!-- VIP emergency vehicles (higher priority) -->
  <vType id="vip_veh" vClass="emergency" color="1,0,0" guiShape="emergency" 
         accel="3.5" decel="7.0" maxSpeed="20.0" />

  <!-- ==================== REGULAR TRAFFIC FLOWS ==================== -->
  
  <!-- East to West traffic -->
  <flow id="f_east2west" begin="0.00" end="800.00" number="350" 
        from="E2C" to="C2W" type="DEFAULT_VEHTYPE" />
  
  <!-- West to East (via C2C exit) -->
  <flow id="f_west2center" begin="0.00" end="800.00" number="350" 
        from="W2C" to="C2C" type="DEFAULT_VEHTYPE" />
  
  <!-- North to South traffic -->
  <flow id="f_north2south" begin="0.00" end="800.00" number="350" 
        from="N2C" to="C2S" type="DEFAULT_VEHTYPE" />
  
  <!-- South to North traffic -->
  <flow id="f_south2north" begin="0.00" end="800.00" number="350" 
        from="S2C" to="C2N" type="DEFAULT_VEHTYPE" />

  <!-- ==================== VIP ROUTES ==================== -->
  
  <!-- VIP route: West to Center (exits via C2C) -->
  <route id="vip_route" edges="W2C C2C" />

  <!-- ==================== VIP VEHICLES ==================== -->
  
  <!-- First VIP at 50 seconds -->
  <vehicle id="vip_1" type="vip_veh" route="vip_route" depart="50.00" 
           departLane="best" departSpeed="max" />
  
  <!-- Second VIP at 150 seconds -->
  <vehicle id="vip_2" type="vip_veh" route="vip_route" depart="150.00" 
           departLane="best" departSpeed="max" />
  
  <!-- Third VIP at 250 seconds -->
  <vehicle id="vip_3" type="vip_veh" route="vip_route" depart="250.00" 
           departLane="best" departSpeed="max" />
  
  <!-- Fourth VIP at 400 seconds -->
  <vehicle id="vip_4" type="vip_veh" route="vip_route" depart="400.00" 
           departLane="best" departSpeed="max" />

</routes>